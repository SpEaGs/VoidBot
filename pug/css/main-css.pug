style.
    :root {
        --titlebar-color: rgb(20, 20, 25);
        --toolbar-color: rgb(30, 30, 40);
        --toolbar-hover-color: rgb(40, 40, 48);
        --toolbar-selected-color: rgb(50, 50, 60);
        --navbar-hover-color: rgb(58, 58, 65);
        --main-bg-color: rgb(70, 70, 80);
        --accent-color: rgb(35, 62, 216);
        --accent-color-hover: rgb(70, 93, 225);
        --track-color: rgb(173, 173, 173);
        --track-color-hover: rgb(211, 211, 211);
        --popup-shade-color: rgba(0, 0, 0, 0.7);
    }

    ::-webkit-scrollbar {
        width: 8px;
        height: 8px;
    }
    ::-webkit-scrollbar-track {
        background: var(--track-color);
        transition: ease 0.3s all;
    }
    ::-webkit-scrollbar-track:hover {
        background: var(--track-color-hover);
    }
    ::-webkit-scrollbar-thumb {
        background: var(--accent-color);
        transition: ease 0.3s all;
    }
    ::-webkit-scrollbar-thumb:hover {
        background: var(--accent-color-hover);
    }

    html, body, head {
        background: var(--main-bg-color);
        color: white;
    }

    h2, h3 {
        text-align: center;
    }

    body {
        position: fixed;
        top: 0px;
        left: 0px;
        height: 100%;
        width: 100%;
        overflow: auto;
    }

    .hidden {
        display: none !important;
    }

    .popup {
        transition: ease 0.3s all;
        position: absolute;
        z-index: 10;
        width: 100%;
        height: 100%;
        background-color: var(--popup-shade-color);
        transition: ease 0.3s all;
    }
    .popupItem {
        position: relative;
        display: flex;
        width: 500px;
        height: auto;
        padding: 20px;
        left: calc(50% - 260px);
        top: calc(50% - 100px);
        background-color: var(--toolbar-color);
        text-align: center;
        font-size: 2em;
        transition: ease 0.3s all;
    }

    .webTitle {
        position: relative;
        left: 0px;
        padding: 7px;
        margin: 0px;
        width: 100%;
        text-align: center;
    }
    .pageTitle{ 
        top: -8px;
        left: calc(15% + 12px);
        position: relative;
        display: flex;
        flex-flow: column;
        text-align: left;
        justify-content: center;
        padding-left: 10px;
        height: 50px;
        width: calc(85% - 30px);
        margin: 0px;
        background-color: var(--toolbar-color);
    }
    @media all and (max-width: 1203px) {
        .pageTitle{
            left: 192px;
        }
    }

    .titlebar {
        position: fixed;
        padding-left: 10px;
        padding-right: 10px;
        height: 50px;
        width: 15%;
        min-width: 180px;
        display: flex;
        top: 0px;
        left: 0px;
        background: var(--titlebar-color);
    }

    .navbarContainer {
        position: absolute;
        height: 50px;
        width: 100%;
        top: -40px;
        left: 0px;
        padding-bottom: 40px;
        background: none;
        display: flex;
        flex-flow: row nowrap;
        align-items: center;
        transition: top 0.3s, padding-bottom 0.3s, background-color 0.3s;
    }
    .navbarContainer:hover {
        top: 0px;
        padding-bottom: 0px;
        background-color: var(--titlebar-color);
    }

    .navlinkButton {
        width: 100%;
        max-width: 400px;
        height: 40px;
        margin-left: 0.5em;
        margin-right: 0.5em;
        color: white;
        text-decoration: none;
        background: var(--accent-color);
        text-align: center;
        transition: ease 0.3s all;
    }
    .navlinkButton:hover {
        background: var(--accent-color-hover)
    }
    .navlinkText {
        position: relative;
        top: 10px;
    }

    .mainContentContainer {
        padding: 7px;
        display: flex;
        flex-flow: column nowrap;
        align-items: center;
        overflow-y: auto;
        position: fixed;
        top: 50px;
        left: 0px;
        width: calc(100% - 14px);
        height: calc(100% - 64px);
    }

    .articleItem {
        display: flex;
        position: relative;
        width: 100%;
        align-items: center;
        justify-content: center;
        flex-flow: row;
        flex-wrap: wrap;
        padding: 7px;
    }

    .articleButton {
        width: 400px;
        height: 40px;
        margin-left: 0.5em;
        margin-right: 0.5em;
        padding-bottom: 20px;
        color: white;
        text-decoration: none;
        background: var(--accent-color);
        text-align: center;
        transition: ease 0.3s all;
    }
    .articleButton:hover {
        background-color: var(--accent-color-hover);
    }

    .guildController {
        width: 550px;
        height: 650px;
        position: relative;
        display: flex;
        flex-flow: column;
        align-items: center;
        background-color: var(--toolbar-hover-color);
        margin: 15px;
        transition: ease 0.3s all;
    }
    .gcURLInput {
        width: calc(75% - 2em);
        height: 1.5em;
        position: relative;
        margin-top: 10px;
        left: -11px;
        color: white;
        background-color: var(--navbar-hover-color);
        border: none;
    }
    .gcNowPlay {
        width: 75%;
    }
    .gcAudioQ {
        width: calc(75% - 20px);
        max-height: 200px;
        margin-top: 1.5em;
        background-color: var(--navbar-hover-color);
        padding: 10px;
    }
    .gcAudioQI {
        margin-bottom: 10px;
        margin-right: 8px;
        padding: 5px;
        background-color: var(--toolbar-hover-color);
    }
    .gcSongAdd {
        position: relative;
        width: 20px;
        height: 20px;
        left: 196px;
        top: -21px;
        justify-content: center;
        text-align: center;
        transition: ease 0.3s all;
        cursor: pointer;
        background-color: var(--accent-color);
    }
    .gcSongAdd:hover {
        background-color: var(--accent-color-hover);
    }
    .pCtrlContainer {
        width: calc(75% - 10px);
        height: 1.25em;
        position: relative;
        top: 16px;
        margin: 0px;
        padding: 0px;
        display: flex;
        flex-flow: row;
    }
    .gcPCB {
        background-color: var(--accent-color);
        width: calc(100%/3 - 10px);
        text-align: center;
        height: 100%;
        position: relative;
        cursor: pointer;
        transition: ease 0.3s all;
        margin-left: 5px;
        margin-right: 5px;
    }
    .gcPCB:hover {
        background-color: var(--accent-color-hover);
    }
    .gcVol {
        width: 75%;
        height: 1.25em;
        position: relative;
        top: 8px;
    }
    .gcVolText {
        text-align: right;
        position: relative;
        top: -24px;
        left: calc(100% - 50px);
        width: 50px;
        height: 100%;
    }
    .slider {
        appearance: none;
        margin: 0px;
        width: calc(100% - 50px);
        height: 20px;
        outline: none;
        opacity: 0.7;
        transition: opacity 0.3s;
    }
    .slider:hover {
        opacity: 1;
    }
    .slider::-webkit-slider-thumb {
        appearance: none;
        width: 25px;
        height: 25px;
        background: var(--accent-color);
        cursor: pointer;
    }
